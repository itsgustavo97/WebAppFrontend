@{
    ViewData["Title"] = "Clientes";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Welcome to .NET 6</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<button type="button" class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#clientesModal">
    Nuevo cliente
</button>

<div id="divForTableClientes"></div>

<!-- Modal -->
<div class="modal fade" id="clientesModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Cliente</h5>
                <button type="button" class="btn-close btnClearModalClientes" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="IdCliente" value="0" />
                <div class="mb-3">
                    <label for="NombreCliente" class="form-label">Nombre</label>
                    <input type="text" class="form-control" name="NombreCliente" id="NombreCliente" placeholder="Nombre" pattern="[a-zA-Z0-9]{4,30}" minlenght="4" maxlength="30" required/>
                </div>
                <div class="mb-3">
                    <label for="ApellidoCliente" class="form-label">Apellido</label>
                    <input type="text" class="form-control" name="ApellidoCliente" id="ApellidoCliente" placeholder="Apellido" pattern="[a-zA-Z0-9]{4,30}" minlenght="4" maxlength="30" required/>
                </div>
                <div class="mb-3">
                    <label for="EdadCliente" class="form-label">Edad</label>
                    <input type="number" class="form-control" name="EdadCliente" id="EdadCliente" placeholder="Edad" required/>
                </div>
                <div class="mb-3">
                    <label for="DireccionCliente" class="form-label">Dirección</label>
                    <input type="text" class="form-control" name="DireccionCliente" id="DireccionCliente" placeholder="Dirección" pattern="[a-zA-Z0-9]{4,100}" minlenght="4" maxlength="100" required/>
                </div>
                <div class="mb-3">
                    <label for="TelefonoCliente" class="form-label">Telefono</label>
                    <input type="text" class="form-control" name="TelefonoCliente" id="TelefonoCliente" placeholder="Telefono" pattern="[0-9]{4,8}" minlenght="4" maxlength="8" required/>
                </div>
                <div class="mb-3">
                    <label for="CorreoElectronicoCliente" class="form-label">Correo electrónico</label>
                    <input type="text" class="form-control" name="CorreoElectronicoCliente" id="CorreoElectronicoCliente" placeholder="Correo electrónico" pattern="[a-zA-Z0-9.-_]{4,100}" minlenght="4" maxlength="100" required/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btnClearModalClientes" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="PostCliente()">Guardar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/HomeClientes.js"></script>